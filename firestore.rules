rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.admin == true ||
        request.auth.token.role == 'admin'
      );
    }

    function isSelf(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isSelfOrAdmin(uid) {
      return isSelf(uid) || isAdmin();
    }

    function hasOnlyUserFields() {
      return request.resource.data.keys().hasOnly([
        'email',
        'name',
        'photoUrl',
        'createdAt',
        'updatedAt'
      ]);
    }

    function hasRequiredUserFields() {
      return request.resource.data.keys().hasAll([
        'email',
        'name',
        'createdAt',
        'updatedAt'
      ]);
    }

    function hasValidUserFieldTypes() {
      return request.resource.data.email is string &&
        request.resource.data.name is string &&
        request.resource.data.createdAt is int &&
        request.resource.data.updatedAt is int &&
        (!('photoUrl' in request.resource.data) ||
          request.resource.data.photoUrl is string);
    }

    function hasValidUserFieldValues() {
      return request.resource.data.email.size() > 0 &&
        request.resource.data.email.size() <= 320 &&
        request.resource.data.name.size() > 0 &&
        request.resource.data.name.size() <= 120 &&
        request.resource.data.createdAt > 0 &&
        request.resource.data.updatedAt >= request.resource.data.createdAt &&
        (!('photoUrl' in request.resource.data) ||
          request.resource.data.photoUrl.size() <= 2048);
    }

    function isValidUserDoc() {
      return hasOnlyUserFields() &&
        hasRequiredUserFields() &&
        hasValidUserFieldTypes() &&
        hasValidUserFieldValues();
    }

    // Primary path used by the app: /unlicensed/u/u/{uid}
    match /unlicensed/u/u/{uid} {
      allow read: if isSelfOrAdmin(uid);
      allow create: if isSelfOrAdmin(uid) && isValidUserDoc();
      allow update: if isSelfOrAdmin(uid) &&
        isValidUserDoc() &&
        request.resource.data.createdAt == resource.data.createdAt &&
        request.resource.data.updatedAt >= resource.data.updatedAt;
      allow delete: if isAdmin();
    }

    // Legacy compatibility path. Remove after all clients use /unlicensed/u/u/{uid}.
    match /unlicensed/u/users/{uid} {
      allow read: if isSelfOrAdmin(uid);
      allow create: if isSelfOrAdmin(uid) && isValidUserDoc();
      allow update: if isSelfOrAdmin(uid) &&
        isValidUserDoc() &&
        request.resource.data.createdAt == resource.data.createdAt &&
        request.resource.data.updatedAt >= resource.data.updatedAt;
      allow delete: if isAdmin();
    }

    // Deny all other access by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
